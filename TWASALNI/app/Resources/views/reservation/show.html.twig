{% extends 'base.html.twig' %}

{% block body %}
    <h1>Reservation</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ reservation.id }}</td>
            </tr>
            <tr>
                <th>Pointachat</th>
                <td>{{ reservation.pointAchat }}</td>
            </tr>
            <tr>
                <th>Destination</th>
                <td>{{ reservation.destination }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{% if reservation.date %}{{ reservation.date|date('Y-m-d') }}{% endif %}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ reservation.prix }}</td>
            </tr>
            <tr>
                <th>Listachats</th>
                <td>{{ reservation.listAchats }}</td>
            </tr>
            <tr>
                <th>Remarques</th>
                <td>{{ reservation.remarques }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('annotation_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('annotation_edit', { 'id': reservation.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
